# RandomChat Production Environment Variables
# Copy this file to .env and update the values

# Server Configuration
PORT=5000
NODE_ENV=production

# Admin Configuration
ADMIN_SECRET=your_very_secure_admin_secret_here_change_this
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password_here

# Database Configuration (if using external database)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=randomchat
# DB_USER=randomchat_user
# DB_PASSWORD=your_db_password

# Security Configuration
SESSION_SECRET=your_session_secret_here_change_this
JWT_SECRET=your_jwt_secret_here_change_this

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS Configuration
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true

# SSL Configuration (if using self-signed certificates)
# SSL_KEY_PATH=/path/to/private.key
# SSL_CERT_PATH=/path/to/certificate.crt

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090 